var elem = document.getElementById('submit_<%= @question_id %>');

elem.classList.remove('btn-default');
elem.classList.remove('btn-success');
elem.classList.remove('btn-danger');

if (<%= @correct %>) {
    elem.classList.add('btn-success');
    $.bootstrapGrowl('Acertou', {
        type: 'success',
        align: 'right',
        allow_dismiss: true,
        stackup_spacing: 10
    });
} else {
    elem.classList.add('btn-danger');
    $.bootstrapGrowl('Errou', {
        type: 'danger',
        align: 'right',
        allow_dismiss: true,
        stackup_spacing: 10
    });
}