<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Alterar senha </h1>

          <div>
          <% if @minimum_password_length %>
            <em>(Tamanho minimo: <%= @minimum_password_length %>)</em><br />
          <% end %>
            <%= f.password_field :password, autocomplete: "off", placeholder:"Senha", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, placeholder:"Confirmar senha", autocomplete: "off", class:"form-control" %>
          </div>
          

          <div>
            <%= f.submit "Alterar senha", class:"btn btn-default submit" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>